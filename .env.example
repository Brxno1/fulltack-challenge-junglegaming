# JWT Configuration to API Gateway and Auth-service
JWT_EXPIRES_IN=15m
REFRESH_TOKEN_EXPIRES_IN=7d

# API Gateway Port Configuration
API_GATEWAY_PORT=3001

# Microservices URLs (for API Gateway proxy routing)
AUTH_SERVICE_URL=http://localhost:3002
TASKS_SERVICE_URL=http://localhost:3003
NOTIFICATIONS_SERVICE_URL=http://localhost:3004

# Rate Limiting Configuration for API Gateway
RATE_LIMIT_TTL=1000
RATE_LIMIT_MAX=10

# Service Request Timeout
SERVICE_TIMEOUT=5000